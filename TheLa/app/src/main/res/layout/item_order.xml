<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="8dp">

    <!-- Content: Product Info -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="8dp">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/ivProductImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:src="@drawable/ic_default"
            android:scaleType="centerCrop" />

        <!-- Product Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/tvProductName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khẩu Trang 5D Bông Sen Vàng Thùng"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:maxLines="1"
                android:ellipsize="end" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvSize"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="500c"
                    android:textSize="12sp"
                    android:textColor="@color/dark_gray" />

                <TextView
                    android:id="@+id/tvQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="x 10"
                    android:textColor="@color/dark_gray"
                    android:textSize="12sp"
                    android:layout_marginEnd="8dp"
                    android:gravity="right"/>
            </LinearLayout>

            <TextView
                android:id="@+id/tvDiscountPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₫156.000"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:layout_gravity="right"
                android:layout_marginEnd="8dp"/>
        </LinearLayout>
    </LinearLayout>

    <!-- Header: Store Name and Status -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completed"
            android:textColor="@android:color/holo_red_dark"
            android:textSize="14sp"
            android:textStyle="bold" />

        <!-- Total Price -->
        <TextView
            android:id="@+id/tvTotalPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total 1 item: ₫132.600"
            android:textColor="@android:color/black"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="right"
            android:layout_marginEnd="8dp" />
    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:layout_marginTop="8dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBuyAgain"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Mua lại"
            android:textSize="14sp"
            android:background="@drawable/button_border_background_gray"
            android:textColor="@color/black"
            android:layout_marginStart="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnRate"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Đánh giá"
            android:textSize="14sp"
            android:background="@drawable/button_border_background_green"
            android:textColor="@color/green"
            android:layout_marginStart="8dp" />
    </LinearLayout>

</LinearLayout>
