<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:layout_marginLeft="8dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/rounded_background_nostroke"
    android:elevation="2dp"
    android:radius="8dp">

    <!-- Tên người nhận -->
    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kiều Linh"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="16sp"
        android:fontFamily="sans-serif"/>

    <!-- Số điện thoại -->
    <TextView
        android:id="@+id/tvPhone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="(+84) 396 383 100"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif"/>

    <!-- Địa chỉ đầy đủ -->
    <TextView
        android:id="@+id/tvAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hàng 4, Ấp Nghi Lộc, Xã Bình Giã, Huyện Châu Đức, Bà Rịa - Vũng Tàu"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif"/>

    <!-- Trạng thái Default -->
    <TextView
        android:id="@+id/tvDefault"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Default"
        android:background="@drawable/button_border_background_green"
        android:textColor="@color/green"
        android:paddingHorizontal="8dp"
        android:paddingVertical="4dp"
        android:layout_marginTop="8dp"
        android:textSize="12sp"
        android:visibility="visible" />
</LinearLayout>
